apiVersion: batch/v1
kind: CronJob
metadata:
  name: {{ .Chart.Name }}
  namespace: {{ .Values.namespace }}
spec:
  schedule: {{ .Values.schedule }}
  successfulJobsHistoryLimit: {{ .Values.successfulJobsHistoryLimit }}
  failedJobsHistoryLimit: {{ .Values.failedJobsHistoryLimit }}
  jobTemplate:
    spec:
      backoffLimit: 2
      template:
        spec:
          containers:
          - name: {{ .Values.containers.name }}
            image: {{ .Values.containers.image }}
            imagePullPolicy: {{ .Values.containers.pullPolicy }}
            args:
            - echo
            - "Job finished"
          initContainers:
          {{- range $initContainers, $container := .Values.initContainers.definitions }}
          - name: {{ $initContainers | kebabcase }}
          {{- if or (eq $initContainers "loadDbDump") (eq $initContainers "uploadDumpWithoutPii") (eq $initContainers "uploadDevDump") }}
            image: {{ (index $.Values.initContainers.images 0).container }}
          {{- else }}
            image: {{ (index $.Values.initContainers.images 1).container }}
          {{- end }}
            imagePullPolicy: {{ $.Values.initContainers.pullPolicy }}
            command:
            - {{ $container.command }}
            envFrom:
            - secretRef:
                name: {{ $.Chart.Name }}
            - configMapRef:
                name: {{ $.Chart.Name }}
            volumeMounts:
          {{- range $container.volumeMounts }}
            - name: {{ .name }}
              mountPath: {{ .path }}
          {{- if .subPath }}
              subPath: {{ .subPath }}
          {{- end }}
          {{- end }}
          {{- end }}
          volumes:
          - name: dumps
            emptyDir: {}
          - name: job
            emptyDir: {}
          - name: db-config
            configMap:
              name: {{ .Chart.Name }}
              items:
              - key: database.yml
                path: database.yml
              defaultMode: 0644
          - name: scripts
            configMap:
              name: {{ .Chart.Name }}
              defaultMode: 0777
          serviceAccountName: {{ .Chart.Name }}
          restartPolicy: {{ .Values.restartPolicy }}